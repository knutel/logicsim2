<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LogicSim.ViewModels"
             mc:Ignorable="d" d:DesignWidth="16" d:DesignHeight="16"
             x:Class="LogicSim.Views.Controls.PinView"
             x:DataType="vm:PinViewModel">
    
    <Ellipse Width="12" Height="12"
             Fill="{Binding DisplayColor}"
             Stroke="#000000"
             StrokeThickness="2"
             Cursor="Hand">
        <Ellipse.Styles>
            <Style Selector="Ellipse:pointerover">
                <Setter Property="Fill" Value="{Binding HoverColor}"/>
                <Setter Property="StrokeThickness" Value="2"/>
            </Style>
        </Ellipse.Styles>
        <ToolTip.Tip>
            <TextBlock Text="{Binding Name}"/>
        </ToolTip.Tip>
    </Ellipse>
</UserControl>