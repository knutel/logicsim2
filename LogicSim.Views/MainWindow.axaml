<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LogicSim.ViewModels"
        xmlns:views="using:LogicSim.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="768"
        x:Class="LogicSim.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="LogicSim - Digital Logic Simulator"
        Width="1024" Height="768">
    
    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="#2D3142" Height="40">
            <TextBlock Text="LogicSim - Circuit Designer" 
                       FontSize="16" 
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       Margin="15,0"
                       Foreground="White"/>
        </Border>
        
        <!-- Main Content Area - Circuit Canvas -->
        <views:CircuitCanvasView Grid.Row="1" 
                                 DataContext="{Binding CanvasViewModel}"/>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#2D3142" Height="25">
            <TextBlock Text="Drag the AND gate to move it around the canvas" 
                       FontSize="12" 
                       VerticalAlignment="Center"
                       Margin="10,0"
                       Foreground="#BFC0C0"/>
        </Border>
    </Grid>
</Window>