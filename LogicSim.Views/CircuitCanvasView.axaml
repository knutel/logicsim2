<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LogicSim.ViewModels"
             xmlns:controls="using:LogicSim.Views.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="LogicSim.Views.CircuitCanvasView"
             x:DataType="vm:CircuitCanvasViewModel">
    
    <Grid>
        <Border Background="#1E1E1E"
                BorderBrush="#3E3E3E"
                BorderThickness="1">
            
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                
                <Canvas x:Name="CircuitCanvas" Width="2000" Height="2000" Background="#252525"/>
                
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>